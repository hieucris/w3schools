@{ 
    Layout = "_AuthLayout";
    ViewData["Title"] = "Login";
}
<div class="container">
    <div id="box">
        <div id="inside-box">            
            <form id="form">
                <div class="form-group">
                    <h1>Login</h1>
                </div>
                <div class="form-group">
                    <div class="d-flex justify-content-between">
                        <label class="" for="email">Email</label>
                        <span>
                            Need an account?
                            <a href="@Url.Action("Signup","Auth")" class="text-success">Signup</a>
                        </span>
                    </div>
                    <input type="email" class="form-control" name="email" id="email" placeholder="Enter email">
                </div>
                <div class="form-group">
                    <label for="pw">Password</label>
                    <div class="position-relative d-flex align-items-center">
                        <input type="password" class="form-control" name="password" id="password" placeholder="Password">
                        <span class="eye"><i id="togglePassword" class="fas fa-eye"></i></span>
                    </div>
                </div>
                <div class="form-group">
                    <div id="err" style="display:none" class="text-danger">

                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="w-100 btn btn-success">Login</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    const togglePassword = document.querySelector('#togglePassword');
    const password = document.querySelector('#password');
    togglePassword.addEventListener('click', function (e) {
        // toggle the type attribute
        const type = password.getAttribute('type') === 'password' ? 'text' : 'password';
        password.setAttribute('type', type);
        // toggle the eye / eye slash icon
        this.classList.toggle('fa-eye-slash');
    });
    $(function () {
        $("#form").submit(function (e) {
        e.preventDefault();
        data = new FormData($("#form")[0]);
        $.ajax({
            url: "@Url.Action("LoginMethod","Auth")",
            data: data,
            contentType:false,
            processData: false,
            type: 'post',
            dataType:"json",

        }).done(function (e) {
            if (e.status === 1) {
                location.href = "/Admin/Index";
            } else {
                let messArray = (e.message).split("!");
                $("#err").empty();
                messArray.forEach(function (value, index) {
                    $("#err").append("<div class='p-2'>"+value+"</div>").css("display", "block");
                })
            }
        }).fail(function(e){
            DevExpress.ui.notify("Error","warning", 5000);
        })

    })
    })


</script>