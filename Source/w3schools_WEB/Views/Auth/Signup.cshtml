
@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Sign up";
}
<div class="container" style="max-width:2000px; height:100%; padding:0; margin:0; background-color:#1e7e346b">
    <div id="box">
        <div id="inside-box">
            <form id="form">
                <div class="form-group">
                    <h1>Signup</h1>
                </div>
                <div class="form-group">
                    <div class="d-flex justify-content-between">
                        <label class="" for="username">Username</label>
                        <span>
                            Already have an account?
                            <a href="@Url.Action("Login","Auth")"><span class="text-success">Login</span></a>
                        </span>
                    </div>
                    <input type="text" class="form-control" name="username" id="UserName" placeholder="Enter Username">
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" class="form-control" name="email" id="Email" placeholder="Enter Email">
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <div class="position-relative d-flex align-items-center">
                        <input type="password" class="form-control" name="password" id="password" placeholder="Password">
                        <span class="eye"><i id="" class="togglePassword fas fa-eye"></i></span>
                    </div>
                </div>
                <div class="form-group">
                    <label for="rePassword">Re-enter Password</label>
                    <div class="position-relative d-flex align-items-center">
                        <input type="password" class="form-control" name="rePassWord" id="RePassWord" placeholder="Re-enter Password">
                        <span class="eye"><i id="" class="fas fa-eye togglePassword"></i></span>
                    </div>
                </div>
                <div class="form-group">
                    <div id="err" style="display:none" class="text-danger">

                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" id="btn" class="w-100 btn btn-success">Signup</button>
                </div>
            </form>
        </div>
    </div>
</div>
<script>
    const togglePassword = document.querySelectorAll('.togglePassword');

    togglePassword.forEach(x => x.addEventListener('click', function (e) {
        // toggle the type attribute
        let parent = x.parentNode.previousElementSibling;
        const type = parent.getAttribute('type') === 'password' ? 'text' : 'password';
        parent.setAttribute('type', type);
        // toggle the eye / eye slash icon
        x.classList.toggle('fa-eye-slash');
    })
    );
    $(function () {
        $("#form").submit(function (e) {
        e.preventDefault();
        data = new FormData($("#form")[0]);
        $.ajax({
            url: "@Url.Action("SignupMethod","Auth")",
            data: data,
            contentType:false,
            processData: false,
            type: 'post',
            dataType:"json",

        }).done(function (e) {            
            if (e.status === 1) {
                location.href = "/Home/Index";
            } else {
                let messArray = (e.message).split("!");
                $("#err").empty();
                messArray.forEach(function (value, index) {
                    $("#err").append("<div class='p-2'>"+value+"</div>").css("display", "block");
                })                
            }
        }).fail(function(e){
            DevExpress.ui.notify("Error","warning", 5000);
        })
        
    })
    })


</script>